.itemView {
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  height: 50px;
  justify-content: flex-start;
  display: flex;
  align-items: center;
}

.input {
  width: 250px;
  height: 50px;
  border: 2px solid;
}

.line {
  margin-top: 20px;
  background-color: #f5f5f5;
  width: 100%;
  height: 20px;
  margin-bottom: 10px;
}

.imgLight {
  width: 230px;
  height: 230px;
}

.item_adjust_light {
  width: 100%;
  height: 230px;
}

.section_title {
  font-size: 17px;
  margin-left: 20px;
  margin-top: 2px;
  width: 100%;
  vertical-align: middle;
}

.slider {
  margin-top: 15px;
  width: 100%;
  height: 230px;
}

.item-power {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  width: 100%;
}

.ele_text {
  margin-left: 20px;
  margin-top: 2px;
  width: 100%;
  font-size: 18px;
  vertical-align: middle;
}

.ele_switch {
  margin-right: 20px;
}

.wx-switch-input {
  width: 90rpx !important;
  height: 50rpx !important;
  background: #50d2c2 !important;
  border: #50d2c2 !important;
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
  width: 90rpx !important;
  height: 50rpx !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
  width: 45rpx !important;
  height: 50rpx !important;
}
